@model ASP.NET.Models.ProductListViewModel


@{
    ViewBag.Title = "ProductCategory";
}

<section class="section-content padding-y">
    <div class="container">


        <!-- ============================  FILTER TOP  ================================= -->
        <div class="card mb-3">
            <div class="card-body">
                <ol class="breadcrumb float-left">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div> <!-- card-body .// -->
        </div> <!-- card.// -->
        <!-- ============================ FILTER TOP END.// ================================= -->


        <div class="row">
            <aside class="col-md-2">

                <article class="filter-group">
                    <h6 class="title">
                        <a href="#" class="dropdown-toggle" data-toggle="collapse" data-target="#collapse_1"> Loại Sản phẩm </a>
                    </h6>
                    <div class="filter-content collapse show" id="collapse_1">
                        <div class="inner">
                            <ul class="list-menu">
                                <li><a href="#">Quần </a></li>
                                <li><a href="#">Quần dài </a></li>
                                <li><a href="#">Áo Sweaters  </a></li>
                                <li><a href="#">Quần áo </a></li>
                                <li><a href="#">Áo thun </a></li>
                                <li><a href="#">Áo khoác</a></li>
                                <li><a href="#">Một số thứ khác </a></li>
                            </ul>
                        </div> <!-- inner.// -->
                    </div>
                </article> <!-- filter-group  .// -->
                <article class="filter-group">
                    <h6 class="title">
                        <a href="#" class="dropdown-toggle" data-toggle="collapse" data-target="#collapse_2"> Thương hiệu </a>
                    </h6>
                    <div class="filter-content collapse show" id="collapse_2">
                        <div class="inner">
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" checked="" class="custom-control-input">
                                <div class="custom-control-label">
                                    Nike
                                    <b class="badge badge-pill badge-light float-right">120</b>
                                </div>
                            </label>
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" checked="" class="custom-control-input">
                                <div class="custom-control-label">
                                    Uniqlo
                                    <b class="badge badge-pill badge-light float-right">15</b>
                                </div>
                            </label>
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" checked="" class="custom-control-input">
                                <div class="custom-control-label">
                                    Tommy Hilfiger
                                    <b class="badge badge-pill badge-light float-right">35</b>
                                </div>
                            </label>                          
                        </div> <!-- inner.// -->
                    </div>
                </article> <!-- filter-group .// -->
               


                <!-- filter-group .// -->

            </aside> <!-- col.// -->
            <main class="col-md-10">


                <header class="mb-3">
                    <div class="form-inline">
                        <strong class="mr-md-auto">Tìm thầy 30 sản phẩm</strong>
                        <select class="mr-2 form-control">
                            <option>Sản phẩm mới nhất</option>
                            <option>Xu hướng</option>
                            <option>Phổ biến nhất</option>
                            <option>Rẻ nhất</option>
                        </select>
                        <div class="btn-group">
                            <a href="page-listing-grid.html" class="btn btn-light" data-toggle="tooltip" title="List view">
                                <i class="fa fa-bars"></i>
                            </a>
                            <a href="page-listing-large.html" class="btn btn-light active" data-toggle="tooltip" title="Grid view">
                                <i class="fa fa-th"></i>
                            </a>
                        </div>
                    </div>
                </header><!-- sect-heading -->

                @foreach (var item in Model.Products)
                {
                    <article class="card card-product-list mb-4 shadow-sm">
                        <div class="row no-gutters">
                            <aside class="col-md-4">
                                <a href="@Url.Action("ProductDetail", "Product", new { id = item.Id })" class="img-wrap d-block">
                                    <span class="badge badge-danger">MỚI</span>
                                    <img src="~/Content/images/items/@item.Avatar" alt="@item.Name" class="img-fluid rounded">
                                </a>
                            </aside> <!-- col.// -->
                            <div class="col-md-8">
                                <div class="info-main p-3">
                                    <a href="@Url.Action("ProductDetail", "Product", new { id = item.Id })" class="h5 title text-dark">
                                        @item.Name
                                    </a>
                                    <div class="price-wrap mt-2">
                                        <!-- Giá chuyển thành màu đen -->
                                        <span class="h4 price text-dark">@string.Format("{0:N0} ₫", item.Price)</span>
                                    </div>
                                    <div class="rating-wrap mb-2">
                                        <ul class="rating-stars">
                                            <li style="width:100%" class="stars-active text-warning">
                                                <!-- Ngôi sao màu vàng -->
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                            <li class="text-muted">
                                                <!-- Ngôi sao không được đánh giá -->
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                        </ul>
                                        <div class="label-rating">4.5/10</div>
                                    </div> <!-- rating-wrap.// -->

                                    <p class="text-muted" style="font-size: 0.9rem;">
                                        @item.FullDescription
                                    </p>

                                    <div class="d-flex justify-content-end">
                                        <a href="@Url.Action("ProductDetail", "Product", new { id = item.Id })" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                                    </div>
                                </div> <!-- info-main.// -->
                            </div> <!-- col.// -->
                        </div> <!-- row.// -->
                    </article> <!-- card-product .// -->
                }



                <!-- Phân trang -->
                <div class="pagination-container">
                    <nav class="mb-4" aria-label="Điều hướng trang mẫu">
                        <ul class="pagination">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a href="@Url.Action("ProductCategory", new { id = Model.CategoryID, page = Model.CurrentPage - 1 })" class="page-link prev">Trước</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a href="@Url.Action("ProductCategory", new { id = Model.CategoryID, page = i })" class="page-link">@i</a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a href="@Url.Action("ProductCategory", new { id = Model.CategoryID, page = Model.CurrentPage + 1 })" class="page-link next">Tiếp theo</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>

                <style>
                    .pagination-container {
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        margin-top: 20px;
                    }

                        .pagination-container .page-link {
                            padding: 10px 20px;
                            margin: 0 5px;
                            text-decoration: none;
                            color: #007bff;
                            border: 1px solid #ddd;
                            border-radius: 5px;
                            transition: background-color 0.3s, color 0.3s;
                        }

                            .pagination-container .page-link:hover {
                                background-color: #007bff;
                                color: white;
                            }

                        .pagination-container .page-item.active .page-link {
                            background-color: #007bff;
                            color: white;
                            font-weight: bold;
                        }

                        .pagination-container .page-item .page-link {
                            font-weight: bold;
                            color: #007bff;
                            text-decoration: none;
                        }

                            .pagination-container .page-item .page-link:hover {
                                background-color: #007bff;
                                color: white;
                            }

                        .pagination-container .page-item.disabled .page-link {
                            background-color: #f5f5f5;
                            color: #ccc;
                            pointer-events: none;
                            border-color: #ddd;
                        }
                </style>

                <div class="box text-center">
                    <p>Bạn đã tìm thấy những gì bạn đang tìm kiếm？</p>
                    <a href="" class="btn btn-light">Có</a>
                    <a href="" class="btn btn-light">Không</a>
                </div>


            </main> <!-- col.// -->

        </div>

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
