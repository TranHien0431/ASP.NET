
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="
    text-align: center;
    background: linear-gradient(135deg, #e0f7fa, #ffffff);
    padding: 30px;
    border: 1px solid #ddd;
    border-radius: 15px;
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
    max-width: 450px;
    margin: 50px auto;
    font-family: 'Arial', sans-serif;">

    <img src="https://img.icons8.com/emoji/96/000000/check-mark-emoji.png"
         alt="Success Icon" style="width: 80px; margin-bottom: 20px;">

    <h2 style="color: #28a745; font-size: 26px; margin-bottom: 10px;">
        ✅ Thanh toán thành công!
    </h2>
    <p style="font-size: 16px; color: #555; margin-bottom: 25px;">
        Cảm ơn bạn đã mua sắm tại cửa hàng của chúng tôi.
    </p>
    <a href="@Url.Action("Index","Home")"
       style="
           display: inline-block;
           padding: 12px 25px;
           background: linear-gradient(135deg, #007bff, #0056b3);
           color: #fff;
           text-decoration: none;
           font-size: 16px;
           border-radius: 25px;
           transition: all 0.3s ease;
           box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        Tiếp tục mua hàng
    </a>
    <p style="margin-top: 15px; font-size: 14px; color: #777;">
        Bạn có thể xem lại đơn hàng trong phần tài khoản của mình.
    </p>
</div>


